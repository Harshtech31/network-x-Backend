# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/networkx

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRES_IN=7d

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=networkx-media-storage


# Amazon SES Configuration (for email notifications)
SES_FROM_EMAIL=noreply@networkx.com
SES_REPLY_TO_EMAIL=support@networkx.com
SES_REGION=us-east-1

# Amazon SNS Configuration (for push notifications)
SNS_PLATFORM_APPLICATION_ARN=arn:aws:sns:us-east-1:123456789012:app/GCM/NetworkX
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:NetworkXNotifications

# AWS Lambda Configuration (for image processing)
LAMBDA_IMAGE_PROCESSOR_FUNCTION=networkx-image-processor
LAMBDA_THUMBNAIL_GENERATOR_FUNCTION=networkx-thumbnail-generator
LAMBDA_IMAGE_OPTIMIZER_FUNCTION=networkx-image-optimizer
LAMBDA_METADATA_EXTRACTOR_FUNCTION=networkx-metadata-extractor
LAMBDA_CONTENT_MODERATOR_FUNCTION=networkx-content-moderator
LAMBDA_VARIANT_GENERATOR_FUNCTION=networkx-variant-generator
LAMBDA_BATCH_PROCESSOR_FUNCTION=networkx-batch-processor

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:19006

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
